    "moleculer-repl": "^0.6.1"
  },
  "dependencies": {
    "moleculer-web": "^0.10.4",
    "nats": "^1.3.0",
    "moleculer": "^0.13.9"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  }
